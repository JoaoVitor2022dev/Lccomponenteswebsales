@model LccomponentesWeb.Models.Product;

@{
    ViewData["Title"] = "Deletar Produto";
}
<br />
<h2 class="text-center">@ViewData["Title"]</h2>
<br />

<h3>Você tem certeza que quer deletar esse produto?</h3>

<br />
<div>
    <hr />
    <br />
    <div class="dl-horizontal">
        <dt>Nome:</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <br />
        <dt>Informações do Produto:</dt>
        <dd>@Html.DisplayFor(model => model.Description)</dd>
        <br />
        <dt>Preço:</dt>
        <dd>@Html.DisplayFor(model => model.Price)</dd>
        <br />
        <dt>Quantidade:</dt>
        <dd>@Html.DisplayFor(model => model.Quantity)</dd>
        <br />
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
    </form>
    <br />
    <a asp-action="Index" class="btn btn-warning">Voltar</a>
</div>